<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divVIew"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_pink"
        android:layout_alignParentTop="true"/>


    <FrameLayout
        android:id="@+id/musicContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divVIew"
        android:layout_above="@+id/selectionTab" />


    <LinearLayout
        android:id="@+id/selectionTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_pink"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/recentView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recent_IV"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_library" />


            <TextView
                android:id="@+id/recent_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:text="Library"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/albumView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/album_IV"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_album" />


            <TextView
                android:id="@+id/album_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:text="Albums"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/songsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/songs_IV"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_music_small" />


            <TextView
                android:id="@+id/songs_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:text="Songs"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/artistView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/artist_IV"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_artist"
                />


            <TextView
                android:id="@+id/artist_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5dp"
                android:text="Artists"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>