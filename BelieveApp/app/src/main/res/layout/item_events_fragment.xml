<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/eventTitle_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingTop="@dimen/_5dp"
            android:layout_alignParentTop="true"
            android:text="2018 Radical Women's Conference"
            android:textColor="@color/light_pink"
            android:textSize="@dimen/_16sp" />

        <RelativeLayout
            android:id="@+id/time_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_below="@+id/eventTitle_TV">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_date"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
           android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_date"
            app:tint="@color/black" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/eventDate_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:drawablePadding="@dimen/_10dp"
            android:drawableTint="@color/black"
            android:text="03/15/2018"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon_date" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loc_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_lay">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_loc"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_location"
            app:tint="@color/black" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/eventLoc_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingBottom="@dimen/_5dp"
            android:paddingTop="@dimen/_5dp"
            android:text="College Park, United States   "
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"
            android:layout_toRightOf="@+id/icon_loc" />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/loc_lay"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_marginRight="@dimen/mar_10"
            android:layout_marginTop="@dimen/mar_10"
            android:background="@color/black"></View>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>