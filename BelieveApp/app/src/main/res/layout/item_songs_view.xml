<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5dp">

    <ImageView
        android:id="@+id/songIcon_IV"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/mar_5"
        android:paddingLeft="@dimen/_5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/songsTitle_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music Title"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="@dimen/_3dp">

                <ImageView
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:src="@drawable/ic_time_light"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/songDuration_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="04:23"
                    android:textSize="@dimen/_14sp"
                    android:paddingLeft="@dimen/_5dp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow_black"/>

    </LinearLayout>
</LinearLayout>