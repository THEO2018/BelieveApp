    <LinearLayout
        android:id="@+id/couple_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/mar_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frstPrsn_IV"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/user_pic"
                />

            <TextView
                android:id="@+id/fstPrsn_Name_TV"
                android:layout_width="@dimen/_90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frstPrsn_IV"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Nikki Bale"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:background="@drawable/ic_heart"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_90dp"
                android:background="@drawable/user_pic"/>


        <LinearLayout
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scndPrsn_IV"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_90dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/scndPrsn_Name_TV"
                android:layout_width="@dimen/_90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frstPrsn_IV"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp" />


        </LinearLayout>

        </RelativeLayout>


