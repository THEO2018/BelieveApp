<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="@string/label_recently_added"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_16sp" />

   <!-- <include
        layout="@layout/item_music_album"
        android:layout_below="@+id/label_recent"
        tools:ignore="IncludeLayoutParam" />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_label"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_10dp">

    <LinearLayout
        android:layout_width="@dimen/_150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/albumIcon_IV"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_150dp" />

        <TextView
            android:id="@+id/albumName_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_recently_added"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/pad5"
            android:paddingBottom="@dimen/pad5"
            android:textSize="@dimen/_14sp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"/>
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>