<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10dp"
    android:background="@drawable/shape_pink_outline_solid"
    android:layout_margin="@dimen/_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/prayTitle_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Lost Wife to Cancer"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_18sp"
            android:paddingRight="@dimen/_5dp"/>

        <TextView
            android:id="@+id/time_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="10/17/2017 01:49am"
            android:textSize="@dimen/_11sp"
            android:gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/desc_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_text"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp">

        <TextView
            android:id="@+id/like_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawableLeft="@drawable/ic_hit"
            android:text="50"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/redish_pink"
            android:drawablePadding="@dimen/_5dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/health_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:drawableLeft="@drawable/ic_health"
            android:text="@string/label_health"
            android:textColor="@color/redish_pink"
            android:drawablePadding="@dimen/_5dp"
            android:textSize="@dimen/_14sp"
            android:gravity="center_vertical"/>


        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/ic_earth"/>

            <TextView
                android:id="@+id/location_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="California"
                android:textColor="@color/redish_pink"
                android:paddingLeft="@dimen/_5dp"
                android:textSize="@dimen/_14sp"
                android:gravity="center_vertical"/>

        </LinearLayout>-->

    </LinearLayout>
</LinearLayout>