<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/apnt_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabContainer">


    </FrameLayout>

    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_pink"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="@dimen/_5dp">

        <LinearLayout
            android:id="@+id/calendar_View"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_2dp">

            <ImageView
                android:id="@+id/calendar_IV"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/calendar_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upcoming_View"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upcoming_IV"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_upcoming"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/upcoming_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sendRqst_View"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sendRqst_IV"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_request"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/sendRqst_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_label_send_request"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>