<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad10"
    android:paddingRight="@dimen/pad10"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginBottom="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/teachingImg_IV"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/hashTag_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="#Giving"
                android:textColor="@color/redish_pink"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/time_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="1 hour ago"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/message_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Five ways to Thank Your #GivingTuesday Donors"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:paddingTop="@dimen/_3dp"/>

    </LinearLayout>
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@color/black"></View>-->
</LinearLayout>